NEXT_PUBLIC_BOLD_API_KEY=

# Authentication Configuration (Optional)
# Set AUTH_ENABLED=true to enable authentication (or NEXT_PUBLIC_AUTH_ENABLED for backwards compatibility)
AUTH_ENABLED=false
NEXT_PUBLIC_AUTH_ENABLED=false

# Authentication provider: google, workos, or custom
# Note: When both Google and WorkOS are configured, both options will be shown on sign-in page
AUTH_PROVIDER=google
NEXT_PUBLIC_AUTH_PROVIDER=google

# Auth Secret (Required if auth is enabled)
# Generate with: npx auth secret
AUTH_SECRET=

# Auth URL (Required when auth is enabled)
# Examples: 
# - http://localhost:3000 (for local development)
# - https://your-domain.ngrok.io (for ngrok)
# - https://your-app.com (for production)
AUTH_URL=
# Alternative: NEXTAUTH_URL can also be used
# NEXTAUTH_URL=

# Google OAuth (if using Google provider)
# Note: Google auth is always enabled for Bold team members (@boldvideo.com, @boldvideo.io, @bold.video)
# when credentials are provided, regardless of the AUTH_PROVIDER setting
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# WorkOS OAuth (if using WorkOS provider)
# Used for customer organization SSO
AUTH_WORKOS_ID=
AUTH_WORKOS_SECRET=
AUTH_WORKOS_CONNECTION=  # Required: WorkOS connection ID (get from WorkOS dashboard)
AUTH_WORKOS_ORG=  # Optional: Organization ID for organization-specific sign-in

# Optional: Restrict to specific email domains (comma-separated)
# Example: company.com,example.org
# Note: Bold team domains (@boldvideo.com, @boldvideo.io, @bold.video) are always allowed when Google auth is configured
NEXT_PUBLIC_AUTH_ALLOWED_DOMAINS=

# Optional: Enable larger header logo size for wide/short logos
# Set to "true" for customers whose logos need more height (80px instead of 40px)
NEXT_PUBLIC_LARGE_HEADER=
